<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="avidovic.zad29_30.MainActivity">

    <EditText
        android:id="@+id/txtISBN"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="ISBN" />


    <EditText
        android:id="@+id/txtTitle"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:hint="title" />

    <Button
        android:text="Add title"
        android:id="@+id/btnAdd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickAddTitle" />

    <Button
        android:text="Retrieve titles"
        android:id="@+id/btnRetrieve"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRetrieveTitles"  />

    <Button
        android:text="@string/BL"
        android:id="@+id/btnRetrieveBL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBL"/>

    <Button
        android:text="@string/delete"
        android:id="@+id/btnDeleteIsbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickDelete"/>



</LinearLayout>
